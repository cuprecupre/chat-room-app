# Server Environment Variables
# Copy this file to .env and fill in the values

# Server port
PORT=3000

# Firebase Admin SDK credentials (JSON string, single line)
# Get this from Firebase Console > Project Settings > Service Accounts
# Convert to single line with: cat firebase-service-account.json | jq -c .
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# Game recovery window (in hours)
# Only games updated within this time window will be recovered on server restart
# Default: 3 hours (recommended for active games)
GAME_RECOVERY_HOURS=3

# Enable database persistence for stats
# Set to "true" to sync stats to Firestore every 5 minutes
ENABLE_DB_PERSISTENCE=true
ADMIN_SECRET=xx